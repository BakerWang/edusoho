{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{ '个人中心'|trans }} - {{ parent() }}{% endblock %}

{% block content %}

{{ render(controller('TopxiaWebBundle:My:avatarAlert')) }}

<div class="row row-3-9">
  <div class="col-md-3">

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="list-group-block">

          {% if app.user.isTeacher() %}
            <div class="list-group-panel">
              <div class="list-group-heading">{{ '我的教学'|trans }}</div>
              <ul class="list-group">
               <a class="list-group-item
               {% if side_nav == 'my-teaching-courses' %} active {% endif %}" 
               href="{{path('my_teaching_courses')}}">{{ '在教课程'|trans }}</a>
               <a class="list-group-item 
               {% if side_nav == 'my-teaching-questions' %} active {% endif %}" 
                href="{{path('my_teaching_threads', {type:'question'}) }}">{{ '学员问答'|trans }}</a>
               <a class="list-group-item {% if side_nav == 'my-teaching-discussions' %} active {% endif %}"
                href="{{path('my_teaching_threads', {type:'discussion'}) }}">{{ '学员话题'|trans }}</a>
               <a class="list-group-item {% if side_nav == 'my-teaching-check' %} active {% endif %}"
                href="{{path('course_manage_list_teacher_test_reviewing') }}">{{ '试卷批阅'|trans }}</a>
               {% if is_plugin_installed('Homework') %}
                 <a class="list-group-item {% if side_nav == 'my-teaching-homework-check' %} active {% endif %}" href="{{path('my_teaching_homework_list') }}">作业批改</a>
               {% endif %}
              </ul>
            </div>
          {% endif %}

          <div class="list-group-panel">
            <div class="list-group-heading">{{ '我的学习'|trans }}</div>
            <ul class="list-group">
               <a class="list-group-item
               {% if side_nav == 'my-learning' %} active {% endif %}" 
               href="{{path('my_courses_learning')}}">{{ '我的课程'|trans }}</a>
               {% if setting('course.live_course_enabled') %}
               <a class="list-group-item
               {% if side_nav == 'my-learning-live' %} active {% endif %}" 
               href="{{path('my_live_courses_learning')}}">{{ '我的直播课表'|trans }}</a>
               {% endif %}
               <a class="list-group-item
               {% if side_nav == 'my-questions' %} active {% endif %}" 
              href="{{path('my_questions')}}">{{ '我的问答'|trans }}</a>
               <a class="list-group-item
               {% if side_nav == 'my-discussions' %} active {% endif %}" 
              href="{{path('my_discussions')}}">{{ '我的话题'|trans }}</a>
               <a class="list-group-item
               {% if side_nav == 'my-notes' %} active {% endif %}" 
                href="{{path('my_notebooks')}}">{{ '我的笔记'|trans }}</a>
               {% if is_plugin_installed('Homework') %}
                 <a class="list-group-item {% if side_nav == 'my-homeworks' %} active {% endif %}" href="{{ path('my_homework_list') }}">{{ '我的作业'|trans }}</a>
               {% endif %}
               <a class="list-group-item
               {% if side_nav == 'my-quiz' %} active {% endif %}" 
                href="{{path('my_quiz')}}">{{ '我的考试'|trans }}</a>
               <a class="list-group-item
               {% if side_nav == 'my-group' %} active {% endif %}" 
               href="{{path('group_member_center')}}">{{ '我的小组'|trans }}</a>
            </ul>
          </div>

          <div class="list-group-panel">
            <div class="list-group-heading">{{ '订单'|trans }}</div>
            <ul class="list-group">
              <a class="list-group-item 
               {% if side_nav == 'my-orders' %} active {% endif %} " 
               href="{{path('my_orders')}}">{{ '我的订单'|trans }}</a>
            </ul>
          </div>
          
        </div>
      </div>
    </div>

  </div>
  <div class="col-md-9">{% block main %}{% endblock %}</div>
</div>

{% endblock %}